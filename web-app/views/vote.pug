doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel="stylesheet", href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css', integrity='sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb', crossorigin='anonymous')
    
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')

    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')

    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js', integrity='sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh', crossorigin='anonymous')

    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js', integrity='sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ', crossorigin='anonymous')

    script(src='//cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js')

    script(type='text/javascript').
      var ballot = !{JSON.stringify(ballot)};

      $(function(){
        var ballotElt = document.getElementById('ballot');
        if (!ballot.closed){
          ballotElt = Sortable.create(ballotElt);
        }

        $('#submitBallot').click(function(){
          $.post(
            window.location.href, 
            {order: ballotElt.toArray().map(function(elt){ return parseInt(elt); })},
            function(){
              alert("success");
            }
          ).fail(function(){
              alert("failure");
            }
          );
        });

      });
    


  body
    div.container
      div.row
        div.col-md-8.col-lg-6(style='margin:auto;')
          h1 Ballot for #{ballot.pollName}
          if ballot.closed
            h4
              p This poll is now closed, but your ballot is below
          ul.list-group#ballot
            each item in ballot.options
              li(data-id=item.id).list-group-item= item.name
          br
          button#submitBallot(
            type='button'
            class='btn btn-primary'
            disabled = ballot.closed
          ).
            Vote
